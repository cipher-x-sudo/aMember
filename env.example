# Web Server Configuration
WEB_PORT=8080

# MySQL Database Configuration
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=amember
MYSQL_USER=amember
MYSQL_PASSWORD=amember

# Session Configuration (optional)
# Leave SESSION_COOKIE_DOMAIN empty for local development
# Set to your domain for production (e.g., example.com)
SESSION_COOKIE_DOMAIN=
# Set to 1 for HTTPS/production, 0 for local development
SESSION_COOKIE_SECURE=0

# Note: After starting containers, you'll need to:
# 1. Copy this file to .env and adjust values if needed
# 2. Create application/configs/config.php from application/configs/config-dist.php
# 3. Update config.php with database credentials:
#    - host: mysql (service name from docker-compose.yml)
#    - port: 3306
#    - database: ${MYSQL_DATABASE}
#    - user: ${MYSQL_USER}
#    - password: ${MYSQL_PASSWORD}

